<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KrokomierzSSDB.InstructionPop"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            >
    <VerticalStackLayout Padding="20" BackgroundColor="White" WidthRequest="300">
        <Label Text="This is a popup message!" FontSize="20" HorizontalOptions="Center" />
        <Button Text="Close" Clicked="OnClose" HorizontalOptions="Center" />
    </VerticalStackLayout>
</toolkit:Popup>